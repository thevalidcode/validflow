{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "shell:default",
    "fs:allow-read",
    "fs:allow-write",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "bin/start",
          "sidecar": true
        }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": ["$APPDATA/**", "$HOME/**"]
    },
    "shell:allow-open",
    "fs:default"
  ]
}
